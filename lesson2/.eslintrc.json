{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins":[
    "react-native"
  ],
  "env": {
    "react-native/react-native": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types":  [0, {}],
    "import/prefer-default-export": 0,
    "global-require": 0,
    "class-methods-use-this": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [".", "assets"]
      }
    }
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      },
      "plugins": ["jest"]
    }
  ]
}
